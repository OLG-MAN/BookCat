{% extends 'base.html.twig' %}

{% block title %}Authors{% endblock %}

{% block body %}
<div class="container p-3 bg-light text-dark">
<a href="/">Main Page</a><br>
<a href="/authors/add">Add Author</a><br><br>
<form class="form-inline my-2 my-lg-0" action="{{ path('author_search') }}" method="get">
    <input class="form-control mr-sm-2" type="search" aria-label="Search" name="author">
    <button class="btn btn-default bg-primary text-white my-2 my-sm-0" type="submit">Search Authors</button>
</form><br>
    {% for author in authors %}
        <a href="{{ path('author_show', {'slug': author.slug}) }}">{{ author.id }} {{ author.firstName }} {{ author.secondName }}</a><br>
    {% endfor %}
</div>
{% endblock %}
